<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/electricBlue"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/quickstart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/home_button_side_margin"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="@dimen/home_button_side_margin"
        android:layout_marginBottom="20dp"
        android:background="@drawable/home_buttons"
        android:fontFamily="@font/permanent_marker_reg"
        android:text="@string/quickstart"
        android:textSize="@dimen/home_activity_text_size"
        app:layout_constraintBottom_toTopOf="@id/position"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/position"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/position"
        android:textSize="@dimen/home_activity_text_size"
        android:fontFamily="@font/permanent_marker_reg"
        android:layout_marginStart="@dimen/home_button_side_margin"
        android:layout_marginEnd="@dimen/home_button_side_margin"
        android:background="@drawable/home_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quickstart"
        app:layout_constraintBottom_toTopOf="@id/stats"/>

    <Button
        android:id="@+id/stats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/stats"
        android:textSize="@dimen/home_activity_text_size"
        android:fontFamily="@font/permanent_marker_reg"
        android:layout_marginStart="@dimen/home_button_side_margin"
        android:layout_marginEnd="@dimen/home_button_side_margin"
        android:layout_marginBottom="300dp"
        android:layout_marginTop="20dp"
        android:shadowDx="2"
        android:shadowColor="@color/colorBlack"
        android:background="@drawable/home_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/position"
        />

    <ImageView
        android:id="@+id/basketball_home"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bball"
        app:layout_constraintTop_toBottomOf="@id/stats"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>